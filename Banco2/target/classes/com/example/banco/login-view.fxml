<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.banco.LoginController"
            style="-fx-background-color: linear-gradient(to bottom right, #e0f7fa, #b2ebf2);">
    <VBox spacing="15" alignment="CENTER" prefWidth="360" prefHeight="260" style="-fx-padding: 30;">
        <Label text="🔐 Inicio de sesión"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #006064;" />

        <TextField fx:id="cuentaField" promptText="Número de cuenta"
                   style="-fx-font-size: 14px; -fx-padding: 8; -fx-background-radius: 6px; -fx-border-radius: 6px;" />

        <PasswordField fx:id="passwordField" promptText="Contraseña"
                       style="-fx-font-size: 14px; -fx-padding: 8; -fx-background-radius: 6px; -fx-border-radius: 6px;" />

        <Button text="🔓 Entrar" onAction="#login"
                style="-fx-background-color: #26c6da; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-padding: 8 20; -fx-background-radius: 6px;" />

        <Label fx:id="mensajeLabel"
               style="-fx-text-fill: #d32f2f; -fx-font-size: 13px; -fx-padding: 4;" />
    </VBox>
</AnchorPane>