<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.banco.MenuController"
      spacing="20" alignment="CENTER"
      prefWidth="360" prefHeight="260"
      style="-fx-background-color: linear-gradient(to bottom right, #fff3e0, #ffe0b2); -fx-padding: 30;">

    <Label text="🏦 Menú Principal"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #e65100;" />

    <Button text="💰 Ingresar Dinero" onAction="#abrirIngresar"
            style="-fx-background-color: #ffb74d; -fx-text-fill: white; -fx-font-size: 14px;
                   -fx-background-radius: 8px; -fx-padding: 10 20;" />

    <Button text="💸 Retirar Dinero" onAction="#abrirRetirar"
            style="-fx-background-color: #f57c00; -fx-text-fill: white; -fx-font-size: 14px;
                   -fx-background-radius: 8px; -fx-padding: 10 20;" />

    <Button text="📊 Consultar Saldo" onAction="#abrirConsultar"
            style="-fx-background-color: #e64a19; -fx-text-fill: white; -fx-font-size: 14px;
                   -fx-background-radius: 8px; -fx-padding: 10 20;" />
</VBox>
